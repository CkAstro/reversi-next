{
   "compilerOptions": {
      "noEmit": true,
      "strict": true,
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["ESNext"],
      "allowJs": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "useUnknownInCatchVariables": true,
      "paths": {
         "@/*": ["../src/*"]
      },
      // "traceResolution": true, // turn on to debug paths
      "baseUrl": "."
   },
   "files": ["server.ts"],
   "exclude": ["../node_modules"],
   "include": ["../src/**/*"]
}
